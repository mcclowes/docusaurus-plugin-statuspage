{
  "name": "docusaurus-plugin-statuspage",
  "version": "0.1.0",
  "description": "Displays a discreet banner for degraded Statuspage.io incidents on page load.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "example:start": "npm --prefix examples/docusaurus-v3 run start",
    "example:build": "npm --prefix examples/docusaurus-v3 run build",
    "example:serve": "npm --prefix examples/docusaurus-v3 run serve",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "peerDependencies": {
    "@docusaurus/types": "^2.4.0 || ^3.0.0"
  },
  "devDependencies": {
    "@docusaurus/types": "^3.0.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "docusaurus",
    "plugin",
    "statuspage",
    "statuspage.io",
    "banner",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcclowes/docusaurus-plugin-statuspage.git"
  },
  "bugs": {
    "url": "https://github.com/mcclowes/docusaurus-plugin-statuspage/issues"
  },
  "homepage": "https://github.com/mcclowes/docusaurus-plugin-statuspage#readme",
  "author": "mcclowes",
  "engines": {
    "node": ">=18"
  }
}
